{{ if (index . "cargo") }}
source "$HOME/.cargo/env"
{{ end }}

# no brew by default..
eval "$(/opt/homebrew/bin/brew shellenv)"

{{ if (index . "conda") }}
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/chris/mambaforge/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/chris/mambaforge/etc/profile.d/conda.sh" ]; then
        . "/Users/chris/mambaforge/etc/profile.d/conda.sh"
    else
        export PATH="/Users/chris/mambaforge/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
{{ end }}

export PATH="$PATH:/usr/local/bin"

# Add docker bin path:
export PATH=$PATH:~/.docker/bin

if [ -f ~/.git-completion.zsh ]; then
  . ~/.git-completion.zsh
fi

. "$HOME/.local/bin/env"

export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

eval "$(starship init zsh)"
